// Script temporário para forçar recarga dos dados
(function() {
    // Verificar se já passou pelo processo de recarga
    const hasReloaded = sessionStorage.getItem('data_reloaded');
    
    // Se estamos na página inicial e não carregamos ainda, redirecionar
    if (!hasReloaded && window.location.pathname.endsWith('index.html') || 
        window.location.pathname === '/' || 
        window.location.pathname.endsWith('/')) {
        
        // Marcar que já passamos pelo processo
        sessionStorage.setItem('data_reloaded', 'true');
        
        // Redirecionar para a página de recarga
        window.location.href = 'forcereload.html';
    }
})();
